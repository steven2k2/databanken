<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{description}} | {{siteMetadata.name}}</title>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <script src="https://unpkg.com/@popperjs/core@2"></script>

</head>
<body class="d-flex flex-column min-vh-100">

{{> @partial-block }}


<footer class="bg-light py-3 fw-medium mt-auto">
  <div class="container d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center gap-3">
      <span class="fw-bold text-primary fs-3">{{siteMetadata.name}}</span>
      <div class="d-flex gap-2">
        {{#if socialMedia.instagram}}<a href="{{socialMedia.instagram}}" class="text-primary fs-3"><i class="fab fa-instagram"></i></a>{{/if}}
        {{#if socialMedia.twitter}}<a href="{{socialMedia.twitter}}" class="text-primary fs-3"><i class="fab fa-x-twitter"></i></a>{{/if}}
        {{#if socialMedia.linkedin}}<a href="{{socialMedia.linkedin}}" class="text-primary fs-3"><i class="fab fa-linkedin"></i></a>{{/if}}
        {{#if contactInfo.email}}<a href="mailto:{{contactInfo.email}}" class="text-primary fs-3"><i class="fas fa-envelope"></i></a>{{/if}}
      </div>
    </div>
    <div class="d-flex gap-3">
      {{#each footerLinks}}
        <a href="{{this.url}}" class="text-dark text-decoration-none">{{this.text}}</a>
      {{/each}}
      <span class="text-dark">Â© {{companyDetails.name}} 2025</span>
    </div>
  </div>
</footer>
</body>
</html>