{{#> layouts/simple }}

  {{> navbar}}

  {{#> hero title='Shop <span class="fw-bold text-primary">laptops</span>'}}
    <p class="lead mb-4">
      {{description}}    </p>
  {{/hero}}

  <section class="container py-1">

    <!-- Desktops -->
<!--    <h2 class="mt-3 mb-3 display-2">Refurbished laptops</h2>-->

    <div class="container bg-primary text-light py-3 px-5 my-3 mb-5 rounded">
      <p>Laptops are first come, first served. You must have a valid concession card to purchase a laptop and there is a one per person limit.</p>
      <p>All laptops come with:</p>
      <ul class="list-group list-group-flush ms-3">
        <li>Laptop care guide</li>
        <li>Tested power adapter</li>
        <li>3 Month warranty</li>
        <li>
          <a class="text-light d-flex align-items-center" href="docs/linux-mint-user-guide.pdf" target="_blank" rel="noopener">
            <i class="bi bi-file-earmark-pdf me-2"></i> User guide (PDF)
          </a>
        </li>
      </ul>
    </div>

    {{#if stock.length}}
      <div class="row">
        {{#each stock}}
          {{> laptop-card}}
        {{/each}}
      </div>
    {{else}}
      <p class="text-muted">No stock available at the moment.</p>
    {{/if}}
    <hr>
    <p class="text-muted">Last updated {{lastModified}}</p>
  </section>



{{/layouts/simple}}