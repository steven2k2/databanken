{{#> layout }}
  {{> navbar}}

  {{#> hero title='<span class="fw-bold text-primary">Contact us</span>'}}
    <p class="lead mb-4">
      {{description}}
    </p>
  {{/hero}}

  <div class="container mt-4">
    <div class="row">
      <div class="col-md-6">
        <h4 class="fw-bold border-bottom pb-2">Find us</h4>

        <p class="fw-bold">{{siteMetadata.name}}</p>
        <p>{{address contactInfo.address}}</p>


        <p class="fw-bold">Opening Times</p>
        <dl class="row">
          <dt class="col-sm-4">Tuesday</dt>
          <dd class="col-sm-8">{{contactInfo.openingHours.tuesday.open}} - {{contactInfo.openingHours.tuesday.close}}</dd>

          <dt class="col-sm-4">Thursday</dt>
          <dd class="col-sm-8">{{contactInfo.openingHours.thursday.open}} - {{contactInfo.openingHours.thursday.close}}</dd>

          <dt class="col-sm-4">Friday</dt>
          <dd class="col-sm-8">{{contactInfo.openingHours.friday.open}} - {{contactInfo.openingHours.friday.close}}</dd>

          <dt class="col-sm-4">Saturday</dt>
          <dd class="col-sm-8">{{contactInfo.openingHours.saturday.open}} - {{contactInfo.openingHours.saturday.close}}</dd>

        </dl>

        <p class="fw-bold">Address</p>
        <p>{{contactInfo.address.street}}, {{contactInfo.address.city}} {{contactInfo.address.postalCode}}</p>

        <p class="fw-bold">Phone:</p>
        <p>{{contactInfo.phone}}</p>

        <p class="fw-bold">Email:</p>
        <p><a href="mailto:{{contactInfo.email}}">{{contactInfo.email}}</a></p>
      </div>

      <div class="col-md-6">
        <h4 class="fw-bold border-bottom pb-2">Our Location</h4>
        <div class="ratio ratio-16x9">
          <iframe
              src="https://www.google.com/maps?q={{contactInfo.address.street}},{{contactInfo.address.city}},{{contactInfo.address.region}},{{contactInfo.address.country}}&output=embed"
          width="100%" height="300" frameborder="0" style="border:0;" allowfullscreen>
          </iframe>
        </div>
      </div>
    </div>
  </div>



{{/layout}}